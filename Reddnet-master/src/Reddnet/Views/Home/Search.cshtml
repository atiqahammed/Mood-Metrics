@model BlogCoreEngine.ViewModels.SearchViewModel

@{
}

<div style="width: 40%; margin: auto;">
    <h1 class="bubble">@Model.Blogs.Count() Blogs found</h1>
    @foreach (var blog in Model.Blogs)
    {
        <div class="container" style="padding: 10px; height: 40px">
            <div class="row-c">
                <a asp-controller="Blog" asp-action="View" asp-route-id="@blog.Id">
                    <img style="height: 40px;" src="data:image;base64,@System.Convert.ToBase64String(blog.Cover)" />
                </a>
                <a  style="margin-top: 9px" asp-controller="Blog" asp-action="View" asp-route-id="@blog.Id">
                    <h1 style="margin-left: 15px"><strong>@blog.Name</strong></h1>
                </a>
                <a  style="margin-top: 9px" asp-controller="Blog" asp-action="View" asp-route-id="@blog.Id">
                    <p style="margin-left: 15px"><strong>Description:</strong> @blog.Description</p>
                </a>
            </div>
        </div>
    }

    <h1 class="bubble" style="margin-top: 5px">@Model.Posts.Count() Posts found</h1>

    @foreach (var post in Model.Posts)
    {
        await Html.RenderPartialAsync("_PostPartial", post);
    }

    <h1 class="bubble" style="margin-top: 5px">@Model.Users.Count() Users found</h1>

    @foreach (var user in Model.Users)
    {
        <div class="container" style="width: 850px; padding: 10px; height: 40px">
            <div class="row-c">
                <a asp-controller="Account" asp-action="Profile" asp-route-id="@user.Name">
                </a>
                <img style="height: 40px;" src="data:image;base64,@System.Convert.ToBase64String(user.Image)" />

                <a style="margin-top: 9px" asp-controller="Account" asp-action="Profile" asp-route-id="@user.Name">
                    <h1 style="margin-left: 15px; border-radius: 50px"><strong>@user.Name</strong></h1>
                </a>
            </div>
        </div>
    }
</div>

