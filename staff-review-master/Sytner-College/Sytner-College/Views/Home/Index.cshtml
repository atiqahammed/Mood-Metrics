@{
    ViewData["Title"] = "Home Page";
}
<div class="jumbotron">
    <h1>Sytner College Staff Review System</h1>
</div>
<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/Beard-Algorithm.jpg" alt="learner" class="img-responsive" />
           
        </div> 
        <div class="item">
            <img src="~/images/internship_spotlight.jpg" alt="Beard-guy" class="img-responsive" />
        </div>
        <div class="item">
            <img src="~/images/man-data.jpg" alt="enthusiastic student" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                   
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/Data.jpg" alt="Microsoft Azure" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="row">
    <div class="col-md-5">
        <h2>Welcome To Sytner College!</h2>
        <p>
            Sytner College Staff Dashboard is a sample web application
            where staff from the college, can review students' information and see the number of students who are enrolled on courses.
        </p>
      </div>
</div>
